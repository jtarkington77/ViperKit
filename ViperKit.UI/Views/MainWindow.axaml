<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ViperKit.UI.Views.MainWindow"
        Width="1200"
        Height="750"
        Title="ViperKit"
        Background="#05090A">

  <Grid RowDefinitions="110,*">

    <!-- HEADER BAR -->
    <Border Grid.Row="0"
            Background="#070D0F"
            Padding="16,10"
            BorderBrush="#10191C"
            BorderThickness="0,0,0,2">
      <Grid ColumnDefinitions="Auto,*">

        <!-- LOGO -->
        <Image Grid.Column="0"
               Width="96"
               Height="96"
               Margin="0,0,16,0"
               Stretch="Uniform"
               Source="avares://ViperKit.UI/Assets/logo.png" />

        <!-- TITLE TEXT -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
          <TextBlock Text="ViperKit"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#00FFF8" />
          <TextBlock Text="Incident Response Toolkit"
                     FontSize="14"
                     Foreground="#8FA9AA" />
        </StackPanel>

      </Grid>
    </Border>

    <!-- MAIN BODY -->
    <Border Grid.Row="1"
            Background="#05090A"
            Padding="12,8,12,12">

      <!-- SIMPLE TABS – Avalonia defaults -->
      <TabControl TabStripPlacement="Top">

        <!-- DASHBOARD -->
        <TabItem Header="Dashboard">
          <Border Background="#050E10" Padding="20">
            <Grid RowDefinitions="Auto, *" RowSpacing="16">
              <!-- TOP: TITLE + SUBTITLE -->
              <StackPanel Orientation="Vertical">
                <TextBlock Text="ViperKit Dashboard"
                          FontSize="22"
                          FontWeight="SemiBold"
                          Foreground="#EAF7F7" />
                <TextBlock Text="High-level view of the endpoint you’re working on and quick entry points into Hunt, Persist, and Sweep."
                          FontSize="13"
                          Foreground="#8FA9AA"
                          Margin="0,4,0,0"
                          TextWrapping="Wrap" />
              </StackPanel>

              <!-- BOTTOM: CARDS -->
              <Grid Grid.Row="1"
                    ColumnDefinitions="*,*,*"
                    ColumnSpacing="16">

                <!-- CARD 1: SESSION INFO -->
                <Border Background="#0B1518"
                        CornerRadius="6"
                        Padding="12"
                        BorderBrush="#1A3C3F"
                        BorderThickness="1">
                  <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Current Session"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#00FFF8" />
                    <TextBlock Text="Hostname: (placeholder)"
                              FontSize="13"
                              Foreground="#C7D4D4" />
                    <TextBlock Text="User: (placeholder)"
                              FontSize="13"
                              Foreground="#C7D4D4" />
                    <TextBlock Text="Elevation: (placeholder)"
                              FontSize="13"
                              Foreground="#C7D4D4" />
                  </StackPanel>
                </Border>

                <!-- CARD 2: QUICK ACTIONS -->
                <Border Grid.Column="1"
                        Background="#0B1518"
                        CornerRadius="6"
                        Padding="12"
                        BorderBrush="#1A3C3F"
                        BorderThickness="1">
                  <StackPanel Orientation="Vertical" Spacing="6">
                    <TextBlock Text="Quick Actions"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#00FFF8" />
                    <Button Content="Start IOC Hunt"
                            HorizontalAlignment="Stretch"
                            Margin="0,4,0,0" />
                    <Button Content="Map Persistence"
                            HorizontalAlignment="Stretch" />
                    <Button Content="Run Recent Changes Sweep"
                            HorizontalAlignment="Stretch" />
                  </StackPanel>
                </Border>

                <!-- CARD 3: SAFETY / NOTES -->
                <Border Grid.Column="2"
                        Background="#0B1518"
                        CornerRadius="6"
                        Padding="12"
                        BorderBrush="#1A3C3F"
                        BorderThickness="1">
                  <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Text="Safety Rules"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#00FFF8" />
                    <TextBlock Text="• Preview changes before applying"
                              FontSize="13"
                              Foreground="#C7D4D4"
                              TextWrapping="Wrap" />
                    <TextBlock Text="• Export artifacts before deleting"
                              FontSize="13"
                              Foreground="#C7D4D4"
                              TextWrapping="Wrap" />
                    <TextBlock Text="• Use Evidence Cart instead of ad-hoc notes"
                              FontSize="13"
                              Foreground="#C7D4D4"
                              TextWrapping="Wrap" />
                  </StackPanel>
                </Border>

              </Grid>
            </Grid>
          </Border>
        </TabItem>


        <!-- HUNT -->
        <TabItem Header="Hunt">
          <Border Background="#050E10" Padding="20">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">

              <!-- TITLE + DESCRIPTION -->
              <StackPanel Orientation="Vertical">
                <TextBlock Text="IOC Hunt"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="#EAF7F7" />
                <TextBlock Text="Paste a hash, path, domain, IP, or registry key. ViperKit will fan out across filesystem, registry, tasks, services, and WMI (once wired)."
                          FontSize="13"
                          Foreground="#8FA9AA"
                          Margin="0,4,0,0"
                          TextWrapping="Wrap" />
              </StackPanel>

              <!-- INPUT ROW -->
              <Grid Grid.Row="1"
                    ColumnDefinitions="*,Auto"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="6"
                    ColumnSpacing="8">

                <!-- IOC TEXTBOX -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                  <TextBlock Text="Indicator of Compromise"
                            FontSize="13"
                            Foreground="#C7D4D4" />
                  <TextBox x:Name="HuntIocInput"
                          Margin="0,4,0,0"
                          FontSize="13"
                          Watermark="e.g. file hash, C:\path\to\file.exe, bad-domain.com, 1.2.3.4, HKCU\Software\..."
                          />
                </StackPanel>

                <!-- TYPE SELECT + BUTTON -->
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Right"
                            Spacing="4">
                  <ComboBox x:Name="HuntIocType"
                            Width="160"
                            SelectedIndex="0">
                    <ComboBoxItem Content="Auto-detect" />
                    <ComboBoxItem Content="File / Path" />
                    <ComboBoxItem Content="Hash" />
                    <ComboBoxItem Content="Domain / URL" />
                    <ComboBoxItem Content="IP Address" />
                    <ComboBoxItem Content="Registry" />
                  </ComboBox>
                  <Button x:Name="HuntRunButton"
                          Content="Run Hunt"
                          Width="160"
                          Click="HuntRunButton_OnClick" />
                </StackPanel>

                <!-- STATUS TEXT (PLACEHOLDER) -->
                <TextBlock x:Name="HuntStatusText"
                          Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Text="Status: idle – no hunt executed yet."
                          FontSize="12"
                          Foreground="#8FA9AA"
                          Margin="0,4,0,0" />
              </Grid>

              <!-- RESULTS AREA (NO DATAGRID YET) -->
              <Border Grid.Row="2"
                      Background="#0B1518"
                      CornerRadius="6"
                      Padding="10"
                      BorderBrush="#1A3C3F"
                      BorderThickness="1">
                <StackPanel Orientation="Vertical" Spacing="4">
                  <TextBlock Text="Results"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#EAF7F7" />
                  <TextBlock x:Name="HuntResultsText"
                            Text="No results yet. Once IOC hunting is wired, matches will be listed here."
                            FontSize="13"
                            Foreground="#C7D4D4"
                            TextWrapping="Wrap" />
                </StackPanel>
              </Border>

            </Grid>
          </Border>
        </TabItem>


        <!-- SWEEP -->
        <TabItem Header="Sweep">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Sweep tab shell — recent change radar."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- REMEDIATE -->
        <TabItem Header="Remediate">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Remediate tab shell — preview → apply → undo playbooks."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- CLEANUP -->
        <TabItem Header="Cleanup">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Cleanup tab shell — post-removal hygiene."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- HARDEN -->
        <TabItem Header="Harden">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Harden tab shell — Standard / Strict profiles with rollback."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- CASE -->
        <TabItem Header="Case">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Case tab shell — evidence cart and reporting."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- HELP -->
        <TabItem Header="Help">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Help tab shell — safety rules, shortcuts, and log locations."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

      </TabControl>
    </Border>
  </Grid>
</Window>
