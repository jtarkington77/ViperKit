<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ViperKit.UI.Views.MainWindow"
        Width="1200"
        Height="750"
        Title="ViperKit"
        Background="#05090A">

  <Grid RowDefinitions="110,*">

    <!-- HEADER BAR -->
    <Border Grid.Row="0"
            Background="#070D0F"
            Padding="16,10"
            BorderBrush="#10191C"
            BorderThickness="0,0,0,2">
      <Grid ColumnDefinitions="Auto,*">

        <!-- LOGO -->
        <Image Grid.Column="0"
               Width="96"
               Height="96"
               Margin="0,0,16,0"
               Stretch="Uniform"
               Source="avares://ViperKit.UI/Assets/logo.png" />

        <!-- TITLE TEXT -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
          <TextBlock Text="ViperKit"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#00FFF8" />
          <TextBlock Text="Incident Response Toolkit"
                     FontSize="14"
                     Foreground="#8FA9AA" />
        </StackPanel>

      </Grid>
    </Border>

    <!-- MAIN BODY -->
    <Border Grid.Row="1"
            Background="#05090A"
            Padding="12,8,12,12">

      <!-- SIMPLE TABS – Avalonia defaults -->
      <TabControl TabStripPlacement="Top">

        <!-- DASHBOARD -->
        <TabItem Header="Dashboard">
        <Border Background="#0B1518" Padding="16">
          <StackPanel Orientation="Vertical" Spacing="16">

            <!-- TITLE -->
            <TextBlock Text="Dashboard"
                      FontSize="20"
                      FontWeight="SemiBold"
                      Foreground="#EAF7F7" />

            <TextBlock Text="High-level view of this host and quick entry points into tabs."
                      FontSize="13"
                      Foreground="#8FA9AA"
                      TextWrapping="Wrap" />

            <!-- SYSTEM SNAPSHOT CARD -->
            <Border Background="#050E10"
                    Padding="12"
                    CornerRadius="6"
                    BorderBrush="#1A3C3F"
                    BorderThickness="1">
              <StackPanel Spacing="6">
                <TextBlock Text="System Snapshot"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#EAF7F7" />
                <TextBlock x:Name="SystemHostNameText"
                          Text="Host: (loading...)"
                          FontSize="13"
                          Foreground="#C7D4D4" />
                <TextBlock x:Name="SystemUserText"
                          Text="User: (loading...)"
                          FontSize="13"
                          Foreground="#C7D4D4" />
                <TextBlock x:Name="SystemOsText"
                          Text="OS: (loading...)"
                          FontSize="13"
                          Foreground="#C7D4D4" />
              </StackPanel>
            </Border>

            <TextBlock Text="Later we can add: last hunt summary, quick links into Hunt/Persist/Sweep, and open case folder."
                      FontSize="12"
                      Foreground="#8FA9AA"
                      TextWrapping="Wrap" />
          </StackPanel>
        </Border>
      </TabItem>

        <!-- HUNT -->
        <TabItem Header="Hunt">
          <Border Background="#050E10" Padding="20">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">

              <!-- TITLE + DESCRIPTION -->
              <StackPanel Orientation="Vertical">
                <TextBlock Text="IOC Hunt"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="#EAF7F7" />
                <TextBlock Text="Paste a hash, path, domain, IP, or registry key. ViperKit will fan out across filesystem, registry, tasks, services, and WMI (once wired)."
                          FontSize="13"
                          Foreground="#8FA9AA"
                          Margin="0,4,0,0"
                          TextWrapping="Wrap" />
              </StackPanel>

              <!-- INPUT ROW -->
              <Grid Grid.Row="1"
                    ColumnDefinitions="*,Auto"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="6"
                    ColumnSpacing="8">

                <!-- IOC TEXTBOX -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                  <TextBlock Text="Indicator of Compromise"
                            FontSize="13"
                            Foreground="#C7D4D4" />
                  <TextBox x:Name="HuntIocInput"
                          Margin="0,4,0,0"
                          FontSize="13"
                          Watermark="e.g. file hash, C:\path\to\file.exe, bad-domain.com, 1.2.3.4, HKCU\Software\..."
                          />
                </StackPanel>

                <!-- TYPE SELECT + BUTTON -->
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Right"
                            Spacing="4">
                  <ComboBox x:Name="HuntIocType"
                            Width="160"
                            SelectedIndex="0">
                    <ComboBoxItem Content="Auto-detect" />
                    <ComboBoxItem Content="File / Path" />
                    <ComboBoxItem Content="Hash" />
                    <ComboBoxItem Content="Domain / URL" />
                    <ComboBoxItem Content="IP Address" />
                    <ComboBoxItem Content="Registry" />
                  </ComboBox>
                  <Button x:Name="HuntRunButton"
                          Content="Run Hunt"
                          Width="160"
                          Click="HuntRunButton_OnClick" />
                </StackPanel>

                <!-- STATUS TEXT (PLACEHOLDER) -->
                <TextBlock x:Name="HuntStatusText"
                          Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Text="Status: idle – no hunt executed yet."
                          FontSize="12"
                          Foreground="#8FA9AA"
                          Margin="0,4,0,0" />
              </Grid>

              <!-- RESULTS AREA (NO DATAGRID YET) -->
              <Border Grid.Row="2"
                      Background="#0B1518"
                      CornerRadius="6"
                      Padding="10"
                      BorderBrush="#1A3C3F"
                      BorderThickness="1">
                <StackPanel Orientation="Vertical" Spacing="4">
                  <TextBlock Text="Results"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#EAF7F7" />
                  <TextBlock x:Name="HuntResultsText"
                            Text="No results yet. Once IOC hunting is wired, matches will be listed here."
                            FontSize="13"
                            Foreground="#C7D4D4"
                            TextWrapping="Wrap" />
                </StackPanel>
              </Border>

            </Grid>
          </Border>
        </TabItem>


        <!-- PERSIST -->
        <TabItem Header="Persist">
          <Border Background="#0B1518" Padding="16">
            <StackPanel Spacing="12">

              <TextBlock Text="Persistence Map"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#EAF7F7" />

              <TextBlock Text="Enumerate basic autorun locations (HKCU/HKLM Run and RunOnce)."
                        FontSize="13"
                        Foreground="#C7D4D4"
                        TextWrapping="Wrap" />

              <Button x:Name="PersistRunButton"
                      Content="Enumerate Autoruns (HKCU/HKLM Run*)"
                      Width="260"
                      HorizontalAlignment="Left"
                      Click="PersistRunButton_OnClick" />

              <TextBlock x:Name="PersistStatusText"
                        Text="Status: idle."
                        FontSize="12"
                        Foreground="#8FA9AA"
                        Margin="0,4,0,0" />

              <Border Background="#050E10"
                      Padding="8"
                      CornerRadius="4"
                      BorderBrush="#1A3C3F"
                      BorderThickness="1"
                      Margin="0,8,0,0">

                <StackPanel>
                  <TextBlock Text="Results"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="#EAF7F7"
                            Margin="0,0,0,6" />

                  <ListBox x:Name="PersistResultsList"
                          Height="260"
                          Background="#050E10"
                          BorderThickness="0"
                          Foreground="#C7D4D4" />
                </StackPanel>
              </Border>
            </StackPanel>
          </Border>
        </TabItem>

        <!-- SWEEP -->
        <TabItem Header="Sweep">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Sweep tab shell — recent change radar."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- REMEDIATE -->
        <TabItem Header="Remediate">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Remediate tab shell — preview → apply → undo playbooks."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- CLEANUP -->
        <TabItem Header="Cleanup">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Cleanup tab shell — post-removal hygiene."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- HARDEN -->
        <TabItem Header="Harden">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Harden tab shell — Standard / Strict profiles with rollback."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- CASE -->
        <TabItem Header="Case">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Case tab shell — evidence cart and reporting."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

        <!-- HELP -->
        <TabItem Header="Help">
          <Border Background="#0B1518" Padding="16">
            <TextBlock Text="Help tab shell — safety rules, shortcuts, and log locations."
                       Foreground="#C7D4D4"
                       FontSize="16"
                       TextWrapping="Wrap" />
          </Border>
        </TabItem>

      </TabControl>
    </Border>
  </Grid>
</Window>
